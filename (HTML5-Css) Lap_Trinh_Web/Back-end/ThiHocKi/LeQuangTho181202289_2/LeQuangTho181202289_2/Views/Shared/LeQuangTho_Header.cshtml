@model IEnumerable<LeQuangTho181202289_2.Models.Entities.LoaiHang>

<div class="header">
    <div class="header_top">
        <div class="logo">
            <a href="index.html"><img src="~/Content/images/logo.png" alt="" /></a>
        </div>
        <div class="cart">
            <p>
                Welcome to our Online Store! <span>Cart:</span><div id="dd" class="wrapper-dropdown-2">
                    0 item(s) - $0.00
                    <ul class="dropdown">
                        <li>you have no items in your Shopping cart</li>
                    </ul>
                </div>
            </p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="header_bottom">
        <div class="menu">
            <ul>
                <li class="active"><a href="https://localhost:44328/BaiThi/Index">Lê Quang Thọ</a></li>
                @foreach (var lh in Model)
                {
                    <li id="@lh.MaLoai"><a>@lh.TenLoai</a></li>
                }
            </ul>
        </div>
        <div class="search_box">
            <form>
                <input type="text" value="Search" onfocus="this.value = ''; " onblur="if (this.value == '') {this.value = 'Search';}">
                <input type="button" value="">
            </form>
        </div>
        <div class="clear"></div>
    </div>
</div>

<script>
    $("li").click(function () {
        var id = $(this).attr("id");
        $.ajax({
            url: "RenderProductByCatId",
            data: { CatId: id },
            success: function (response) {
                $("div .content").html(response);
            }
        })
    })

    $(":button").click(function () {
        var keyword = $(':text').val();
        $.ajax({
            url: "RenderProductBySearch",
            data: { values: keyword },
            success: function (res) {
                $("div .content").html(res);
            }
        })
    })
</script>